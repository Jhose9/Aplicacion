<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_texto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTextMultiline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Ingresa tu texto aquí"
            android:inputType="textMultiLine"
            android:gravity="top|start"
            android:minLines="4"
            android:layout_marginTop="16dp"
            />

        <CheckBox
            android:id="@+id/checkBoxBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Negrita" />

        <CheckBox
            android:id="@+id/checkBoxItalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cursiva"
            android:layout_marginTop="16dp"
            />

        <Button
            android:id="@+id/buttonIncreaseTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aumentar Tamaño"
            android:layout_marginTop="16dp"
            />

        <Button
            android:id="@+id/buttonDecreaseTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disminuir Tamaño"
            android:layout_marginTop="16dp"
            />

        <Button
            android:id="@+id/btn_transformar"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:text="Transformar"
            android:layout_marginTop="16dp"
            />

        <TextView
            android:id="@+id/textViewDisplay"
            android:layout_width="382dp"
            android:layout_height="68dp"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>